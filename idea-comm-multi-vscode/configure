# Install Red Hat Java VS Code extension from Open VSX marketplace into code-server
SERVICE_URL=https://open-vsx.org/vscode/gallery ITEM_URL=https://open-vsx.org/vscode/item code-server --install-extension redhat.java

# Install Java Maven VS Code extension from Open VSX marketplace into code-server
SERVICE_URL=https://open-vsx.org/vscode/gallery ITEM_URL=https://open-vsx.org/vscode/item code-server --install-extension vscjava.vscode-maven

# Install Java Debugger VS Code extension from Open VSX marketplace into code-server
SERVICE_URL=https://open-vsx.org/vscode/gallery ITEM_URL=https://open-vsx.org/vscode/item code-server --install-extension vscjava.vscode-java-debug

# JetBrains projector-related

# Copy over .local from outside of HOME deps to stage projector assets
if [ ! -d ~/.local/bin ]; then cp -R /opt/.local/bin ~/.local/; fi
if [ ! -d ~/.local/lib ]; then cp -R /opt/.local/lib ~/.local/; fi

# Copy over projector settings for multi-projector images
if [ -d /opt/projector ]; then
    mkdir -p ~/.projector/apps
    mkdir -p ~/.projector/cache
    ln -s /opt/idea-comm ~/.projector/apps/idea-comm
    cp -R /opt/projector/configs ~/.projector/
fi
