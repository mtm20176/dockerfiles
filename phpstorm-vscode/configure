# Install PHP Tools extension from Open VSX marketplace into code-server
SERVICE_URL=https://open-vsx.org/vscode/gallery ITEM_URL=https://open-vsx.org/vscode/item code-server --install-extension felixfbecker.php-debug

# JetBrains projector-related

# Copy over .local from outside of HOME deps to stage projector assets
if [ ! -d ~/.local/bin ]; then cp -R /opt/.local/bin ~/.local/; fi
if [ ! -d ~/.local/lib ]; then cp -R /opt/.local/lib ~/.local/; fi

# Copy over projector settings for multi-projector images
if [ -d /opt/projector ]; then
    mkdir -p ~/.projector/apps
    mkdir -p ~/.projector/cache
    ln -s /opt/ps ~/.projector/apps/ps
    cp -R /opt/projector/configs ~/.projector/
fi
